<h1>Import Products</h1>

<%= form_for form, as: :product_import, url: product_import_path do |f| %>
  <div class="form-group row">
    <%= f.label :csv_file, class: "col-sm-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.file_field :csv_file, class: "form-control" %>
    </div>
  </div>
  <div class="form-group row">
    <%= f.submit t("product_imports.new.submit"), class: "btn btn-primary" %>
  </div>
<% end %>

<% if form.errors.any? %>
  <ul class="import-errors">
    <h3><%= t("product_imports.new.errors") %></h3>
    <% form.errors.full_messages.each do |error| %>
    <li><%= error %></li>
    <% end %>
  </ul>
<% end %>
